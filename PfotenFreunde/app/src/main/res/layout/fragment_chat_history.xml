<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/chat_history"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/default_margin_half"
            android:layout_marginRight="@dimen/default_margin_half"
            android:layout_height="650dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/msg_input"
            style="@style/PromptText"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/default_margin_half"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/friend_search"
            app:layout_constraintStart_toStartOf="parent" />
        <ImageButton
            android:id="@+id/friend_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/default_margin_half"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_search_24" />

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>